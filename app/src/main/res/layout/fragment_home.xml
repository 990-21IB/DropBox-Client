<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="0dp"
                    android:minHeight="?attr/actionBarSize"
                    android:orientation="vertical"
                    android:theme="?attr/actionBarTheme"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/home_menu"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="0dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_home_menu"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/home"
                        android:layout_width="86dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="0dp"
                        android:text="Home"
                        android:textSize="26dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/home_notification"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="105dp"
                        android:layout_marginTop="0dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_home_notification"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/home_upload"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="0dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_home_upload"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/home_customization"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="0dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_home_customization"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/home_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                android:gravity="left"
                android:text="Search"
                android:textSize="20dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/home_ic_starred"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_home_starred" />

                    <TextView
                        android:id="@+id/home_starred"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Starred"
                        android:textSize="24dp"
                        android:textStyle="bold"></TextView>

                    <Button
                        android:id="@+id/home_seeall1"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="130dp"
                        android:background="@android:color/transparent"
                        android:baselineAligned="false"
                        android:text="See all"
                        android:textColor="@color/blue"
                        android:textSize="24dp"></Button>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/home_desp1"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="8dp"
                        android:text="Anything you star shows up here for quick access."
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        tools:ignore="TextSizeCheck" />

                    <ImageView
                        android:id="@+id/home_img1"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="65dp"
                        android:src="@drawable/home_starred" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/home_ic_viewedlinks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_home_viewedlinks" />

                    <TextView
                        android:id="@+id/home_viewedlinks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Viewed links"
                        android:textSize="24dp"
                        android:textStyle="bold"></TextView>

                    <Button
                        android:id="@+id/home_seeall2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="78dp"
                        android:background="@android:color/transparent"
                        android:baselineAligned="false"
                        android:text="See all"
                        android:textColor="@color/blue"
                        android:textSize="24dp"></Button>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/home_desp2"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="8dp"
                        android:text="Links you've previously viewed show up here."
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        tools:ignore="TextSizeCheck" />

                    <ImageView
                        android:id="@+id/home_img2"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="65dp"
                        android:src="@drawable/home_link" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/home_ic_shared"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_home_shared" />

                    <TextView
                        android:id="@+id/home_shared"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Shared"
                        android:textSize="24dp"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/home_seeall3"
                        android:layout_width="169dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="130dp"
                        android:background="@android:color/transparent"
                        android:baselineAligned="false"
                        android:text="See all"
                        android:textColor="@color/blue"
                        android:textSize="24dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/home_desp3"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="8dp"
                        android:text="Your shared folders will show up here so they're easy to find."
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        tools:ignore="TextSizeCheck" />

                    <ImageView
                        android:id="@+id/home_img3"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="65dp"
                        android:src="@drawable/home_shared" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/home_ic_offline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_home_offline" />

                    <TextView
                        android:id="@+id/home_offline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Offline"
                        android:textSize="24dp"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/home_seeall4"
                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="130dp"
                        android:background="@android:color/transparent"
                        android:baselineAligned="false"
                        android:text="See all"
                        android:textColor="@color/blue"
                        android:textSize="24dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/home_desp4"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="8dp"
                            android:text="Make your most important files available without internet."
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            tools:ignore="TextSizeCheck" />

                        <Button
                            android:id="@+id/home_showmehow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="8dp"
                            android:text="Show me how"
                            app:cornerRadius="0dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/home_img4"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="65dp"
                        android:src="@drawable/home_offline" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>