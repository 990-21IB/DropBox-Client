<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/files"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Your Files"
        android:textSize="40sp" />

    <Button
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#faebd7"
        android:drawableLeft="@drawable/ic_search"
        android:drawableTint="#bfafb2"
        android:text="Search for anything"
        android:textColor="#bfafb2"
        android:textSize="15sp" />

      <View
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:background="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/uploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:drawableLeft="@drawable/ic_add_images"
            android:text="Upload"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="13sp" />

        <Button
            android:id="@+id/folderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/button"
            android:drawableLeft="@drawable/ic_add_folders"
            android:text="Folder"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="13sp" />

        <Button
            android:id="@+id/scanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:textColor="#000000"
            android:layout_marginStart="5dp"
            android:drawableLeft="@drawable/ic_add_scan"
            android:text="Scan"
            android:textStyle="bold"
            android:textSize="13sp" />
    </LinearLayout>
    
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="13sp"
            android:drawableRight="@drawable/ic_arrow_down"/>

        <Button
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="#ffffff"
            android:drawableRight="@drawable/ic_grid_view" />

    </Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:contentDescription="fileimage" />

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/filename2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filename"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fileinfo"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:src="@drawable/dots_vertical" />
    </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <ImageView
              android:id="@+id/img3"
              android:layout_width="50dp"
              android:layout_height="wrap_content"
              android:contentDescription="fileimage" />

          <LinearLayout
              android:layout_width="275dp"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <TextView
                  android:id="@+id/filename3"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Filename"
                  android:textSize="18sp" />

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Fileinfo"
                  android:textSize="12sp" />
          </LinearLayout>

          <ImageView
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:layout_gravity="end"
              android:src="@drawable/dots_vertical" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <ImageView
              android:id="@+id/img"
              android:layout_width="50dp"
              android:layout_height="wrap_content"
              android:contentDescription="fileimage" />

          <LinearLayout
              android:layout_width="275dp"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <TextView
                  android:id="@+id/filename1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Filename"
                  android:textSize="18sp" />

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Fileinfo"
                  android:textSize="12sp" />
          </LinearLayout>

          <ImageView
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:layout_gravity="end"
              android:src="@drawable/dots_vertical" />
      </LinearLayout>

  </LinearLayout>
</ScrollView>