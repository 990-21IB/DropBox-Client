          </LinearLayout>

          <ImageView
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:layout_gravity="end"
              android:contentDescription="@string/details"
              android:src="@drawable/dots_vertical" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingTop="20dp">

          <ImageView
              android:id="@+id/img5"
              android:layout_width="45dp"
              android:layout_height="45dp"
              android:src="@drawable/Image5"
              android:contentDescription="@string/fileimage" />

          <LinearLayout
              android:layout_width="280dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="0dp">

              <TextView
                  android:id="@+id/filename5"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/filename5"
                  android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/fileinfo5"
                  android:textAppearance="@style/TextAppearance.AppCompat.Small" />
          </LinearLayout>

          <ImageView
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:layout_gravity="end"
              android:contentDescription="@string/details"
              android:src="@drawable/dots_vertical" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingTop="20dp">

          <ImageView
              android:id="@+id/img6"
              android:layout_width="45dp"
              android:layout_height="45dp"
              android:src="@drawable/Image6"
              android:contentDescription="@string/fileimage" />

          <LinearLayout
              android:layout_width="280dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="0dp">

              <TextView
                  android:id="@+id/filename6"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/filename6"
                  android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/fileinfo6"
                  android:textAppearance="@style/TextAppearance.AppCompat.Small" />
          </LinearLayout>

          <ImageView
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:layout_gravity="end"
              android:contentDescription="@string/details"
              android:src="@drawable/dots_vertical" />
      </LinearLayout>

  </LinearLayout>

</ScrollView>