                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/details"
                android:src="@drawable/ic_dots_vertical" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/img5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/fileimage"
                android:src="@drawable/img_file5" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/filename5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filename5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fileinfo5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img5_dots"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/details"
                android:src="@drawable/ic_dots_vertical" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/img6"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/fileimage"
                android:src="@drawable/img_file6" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/filename6"
                    android:layout_width="wrap_content"
